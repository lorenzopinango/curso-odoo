<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
<!--
        Vista form de CO Suscriptor
-->
        <record id="view_suscriptor_form" model="ir.ui.view">
            <field name="name">co.suscriptor.form</field>
            <field name="model">co.suscriptor</field>
            <field name="arch" type="xml">
                <form string="Suscriptor" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Información Personal">
                                <group>
                                    <field name="identification"/> />
                                    <field name="address"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
<!--
        Vista tree de CO Suscriptor
-->
        <record id="view_suscriptor_tree" model="ir.ui.view">
            <field name="name">co.suscriptor.tree</field>
            <field name="model">co.suscriptor</field>
            <field name="arch" type="xml">
                <tree string="Suscriptor">
                        <field name="name" />
                        <field name="identification"/>
                        <field name="address"/>
                </tree>
            </field>
        </record>
<!--
        Action de CO Suscriptor
-->
    <record id="action_suscriptor" model="ir.actions.act_window">
        <field name="name">Suscriptor</field>
        <field name="res_model">co.suscriptor</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_suscriptor_tree"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Acá se registran los suscriptores
                que estarán disponibles para solicitar
                material de multimedia.
            </p>
        </field>
    </record>

    <menuitem id="submenu_suscriptor" name="Suscriptores" 
                  parent="menu_base_curso" sequence="15" 
                  groups="group_admin,group_suscriptor" />

    <menuitem action="action_suscriptor" id="menu_suscriptor"
              sequence="5" parent="submenu_suscriptor" />
    </data>
</openerp>